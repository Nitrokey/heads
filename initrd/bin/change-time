#!/bin/bash
#change time using hwclock and date -s

clear

echo -e -n "Please enter the date and time you wish to set\n"
echo -e -n "enter the year please (4)\n"
read -n 4 year
echo -e "\n"
while  (("$year" < 2024)) || (($year > 2200)) ; 
do
    echo -e -n "wrong year, you enter "$year" please enter it again (4) \n"
    read -n 4 year
    echo -e "\n"
done
echo -e -n "enter the month please (01-12)\n"
read -n 2 month
echo -e "\n"
while  (("$month" < 1)) || (($month > 12)) ; 
do
    echo -e -n "wrong month, you enter "$month" please enter it again (01-12) \n"
    read -n 2 month
    echo -e "\n"
done
echo -e -n "enter the day please (01-31)\n"
read -n 2 day
echo -e "\n"
while  (("$day" < 1)) || (($day > 31)) ; 
do
    echo -e -n "wrong day, you enter "$day" please enter it again (01-31) \n"
    read -n 2 day
    echo -e "\n"
done
echo -e -n "enter the hour please (00-23)\n"
read -n 2 hour
echo -e "\n"
while  (("$hour" < 0)) || (($hour > 23)) ; 
do
    echo -e -n "wrong hour, you enter "$hour" please enter it again (00-23) \n"
    read -n 2 hour
    echo -e "\n"
done
echo -e -n "enter minute please (00-59)\n"
read -n 2 min
echo -e "\n"
while  (("$min" < 0)) || (($min > 59)) ; 
do
    echo -e -n "wrong min, you enter "$min" please enter it again (00-59) \n"
    read -n 2 min
    echo -e "\n"
done
echo -e -n "enter second please (00-59)\n"
read -n 2 sec
echo -e "\n"
while  (("$sec" < 0)) || (($sec > 59)) ; 
do
    echo -e -n "wrong sec, you enter "$sec" please enter it again (00-59) \n"
    read -n 2 sec
    echo -e "\n"
done

##getting the output of date -s 
OUTPUT=$(date -s "$year-$month-$day $hour:$min:$sec" 2>&1)

##if output is starting with the letter d which is the beginning of the error message then we do the script again 
if [[ ${OUTPUT} == d* ]]; then
    echo "The date is not correct, press any key to set it again"
    echo -e "\n"
    read -n 1 noting
    clear
    change-time
else
    hwclock -w
    echo -e "the date as been sucessfully set to $year-$month-$day $hour:$min:$sec"
    echo -e "\n"

    echo -e "press any key to return to the menu"
    echo -e "\n"
    read -n 1 nothing
fi
